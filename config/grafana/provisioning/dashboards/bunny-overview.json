{
  "title": "Bunny Observability",
  "uid": "bunny-observability",
  "timezone": "browser",
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Application Logs",
      "type": "logs",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 10
      },
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"hutch-bunny\"} | json | body !~ \"Executing SQL\" | line_format `{{ if eq .severity \"ERROR\" }}❌{{ else if eq .severity \"WARNING\" }}⚠️{{ else }}ℹ️{{ end }} {{.body}}`"
        }
      ],
      "options": {
        "showTime": true,
        "wrapLogMessage": true,
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "showLabels": false,
        "showCommonLabels": false,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    }, 
    {
      "id": 2,
      "title": "Errors & Warnings",
      "type": "logs",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 10
      },
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"hutch-bunny\"} | json | severity=~\"ERROR|WARNING\" | line_format `[{{.severity}}] {{.body}}`"
        }
      ],
      "options": {
        "showTime": true,
        "wrapLogMessage": true,
        "enableLogDetails": true, 
        "showLabels": false,
        "showCommonLabels": false,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    },
    {
      "id": 3,
      "title": "SQL Queries",
      "type": "logs",
      "gridPos": {
        "x": 0,
        "y": 10,
        "w": 24,
        "h": 10
      },
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"hutch-bunny\"} | json | attributes_code_function_name=\"log_query\" | body !~ \"Executing SQL query:\" | line_format \"{{.body}}\""
        }
      ],
      "options": {
        "showTime": true,
        "wrapLogMessage": false,
        "enableLogDetails": true, 
        "showLabels": false,
        "prettifyLogMessage": false, 
        "showCommonLabels": false,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    }, 
    {
        "id": 4,
        "title": "Recent Traces",
        "type": "table",
        "gridPos": { "x": 0, "y": 22, "w": 24, "h": 8 }, 
        "datasource": {
            "type": "tempo",
            "uid": "tempo"
        },
        "targets": [
            {
                "refId": "A",
                "queryType": "traceql",
                "query": "{resource.service.name=\"hutch-bunny\"}",
                "limit": 5
            }
        ], 
        "options": {
            "showHeader": true,
            "footer": {
                "show": false
            }
        }, 
        "transformations": [
            {
                "id": "organize",
                "options": {
                    "excludeByName": {},
                    "indexByName": {},
                    "renameByName": {
                        "traceID": "Trace ID",
                        "startTime": "Start Time",
                        "duration": "Duration"
                    }
                }
            }
        ]
    }, 
    {
        "id": 5,
        "title": "Database Query Rate",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 34, "w": 12, "h": 8 },
        "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
        },
        "targets": [
            {
            "refId": "A",
            "expr": "bunny_db_queries_total",
            "legendFormat": "{{operation}}"
            }
        ],
        "fieldConfig": {
            "defaults": {
            "unit": "short",
            "custom": {
                "drawStyle": "line",
                "lineInterpolation": "smooth"
            }
            }
        }
    }
  ],
  "schemaVersion": 38
}
